<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_row"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/mm_listitem"
    android:clickable="false"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/process_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="7dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/process_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/process_name"
        android:padding="3dp"
        android:textColor="#666" />
    
    <TextView
        android:id="@+id/process_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/process_name"
        android:padding="7dp"
        android:textColor="#666" />
    
     <ImageView
        android:id="@+id/process_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:onClick="photoClick"/>
    
     <TextView
        android:id="@+id/process_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:textColor="#FF0000" />

</RelativeLayout>

